<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="wam-v-two-engines">
  <!-- Macro for inserting an engine with its propeller. -->
  <xacro:macro name="engine" params="prefix position:='0 0 0' orientation:='0 0 0'">
    <link name="${namespace}/${prefix}_engine_link">
      <visual>
        <geometry>
          <mesh filename="package://wamv_description/models/engine/mesh/engine.dae"
            scale="${scale} ${scale} ${scale}"/>
        </geometry>
      </visual>
      <collision name="${prefix}_engine_vertical_axis_collision">
        <origin xyz="${-0.16*scale} 0 ${-0.24*scale}" rpy="0 0 0" />
        <geometry>
          <box size="${0.2*scale} ${0.15*scale} ${0.83*scale}" />
        </geometry>
      </collision>
      <collision name="${prefix}_engine_rear_end_collision">
        <origin xyz="${-0.34*scale} 0 ${0.12*scale}" rpy="0 0 0" />
        <geometry>
          <box size="${0.12*scale} ${0.15*scale} ${0.12*scale}" />
        </geometry>
      </collision>
      <inertial>
        <mass value="${15.0*scale*scale*scale}"/>
        <inertia ixx="${0.889245*scale*scale*scale*scale*scale}" ixy="0.0" ixz="0.0" iyy="${0.911125*scale*scale*scale*scale*scale}" iyz="0.0" izz="${0.078125*scale*scale*scale*scale*scale}"/>
      </inertial>
    </link>

    <link name="${namespace}/${prefix}_propeller_link">
      <visual>
        <geometry>
          <mesh filename="package://wamv_description/models/propeller/mesh/propeller.dae"
            scale="${scale} ${scale} ${scale}"/>
        </geometry>
      </visual>
      <collision name="${prefix}_propeller_collision">
        <origin xyz="${-0.08*scale} 0 0" rpy="0 1.57 0" />
        <geometry>
          <cylinder length="${0.18*scale}" radius="${0.24*scale}" />
        </geometry>
      </collision>
      <inertial>
        <mass value="${0.5*scale*scale*scale}"/>
        <inertia ixx="${0.008545*scale*scale*scale*scale*scale}" ixy="0.0" ixz="0.0" iyy="${0.008545*scale*scale*scale*scale*scale}" iyz="0.0" izz="${0.0144*scale*scale*scale*scale*scale}"/>
      </inertial>
    </link>

    <joint name="${namespace}/${prefix}_chassis_engine_joint" type="revolute">
      <axis xyz="0 0 1"/>
      <limit lower="${-pi}" upper="${pi}" effort="10" velocity="10"/>
      <origin xyz="${position}" rpy="${orientation}"/>
      <parent link="${namespace}/base_link"/>
      <child link="${namespace}/${prefix}_engine_link"/>
    </joint>

    <joint name="${namespace}/${prefix}_engine_propeller_joint" type="continuous">
      <axis rpy="0 0 0" xyz="1 0 0"/>
      <parent link="${namespace}/${prefix}_engine_link"/>
      <child link="${namespace}/${prefix}_propeller_link"/>
      <origin rpy="0 0 0" xyz="${-0.278156*scale} 0 ${-0.509371*scale}"/>
      <limit effort="100" velocity="100" />
      <dynamics friction="0.05" damping="0.05" />
    </joint>
  </xacro:macro>
</robot>
